generator client {
  provider     = "prisma-client"
  output   = "generated"
  // output       = "generated/prisma"
  // moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  LANDLORD
  ADMIN
}

// enum PropertyType {
