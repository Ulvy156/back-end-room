{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",

    "target": "ES2021",
    "outDir": "./dist",

    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "declaration": true,
    "removeComments": true,
    "sourceMap": true,

    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  }
}
